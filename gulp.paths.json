{
	"src": {
		"views": {
			"files": ["./src/*.html", "./src/components/**/*.html" ],
			"watch": ["./src/**/*.html", "./src/components/**/*.html"]
		},
    	"css": {
    		"files": [
				"./src/scss/style.scss",
				"./src/components/**/*.scss"
			],
			"watch": [
				"./src/**/*.scss",
				"./src/components/**/*.scss"
			]
    	},
		"js": [
			"./src/components/**/*.js",
			"./src/js/**/*.js"
		]
	},
	"dest": {
		"views": "./dist",
		"css": "./dist/css",
		"js": "./dist/js",
		"img": "./dist/img"
	}
}
